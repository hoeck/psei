<project name="gruppe4" default="all">

  <description>
    Build with "ant jar" and then start the REPL with:
    "java -cp gruppe4.jar --help"
  </description>

  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="program_jar" location="gruppe4.jar"/>
  <property name="main_class" location="main"/>

  <target name="init" depends="clean">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
          description="Compile Java sources.">
    <javac srcdir="${src}" destdir="${build}" includeJavaRuntime="yes"
           debug="true" target="1.5"/>
  </target>

  <target name="build_jar" depends="compile"
          description="Create jar file.">
    <jar jarfile="${program_jar}" basedir="${build}">
      <fileset dir="${build}" includes="**/*.clj"/>
      <manifest>
        <attribute name="Main-Class" value="${main_class}"/>
        <attribute name="Class-Path" value="."/>
      </manifest>
    </jar>
  </target>

  <target name="jar" depends="build_jar"/>

  <target name="all" depends="jar"/>
  
  <target name="clean"
          description="Remove autogenerated files and directories.">
    <delete dir="${build}"/>
  </target>

</project>
